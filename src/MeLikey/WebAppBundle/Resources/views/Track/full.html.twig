{% twig_js name="track" %}

<img class="artwork" src="/{{ track.albumartWebPath }}/300.jpg"></img>
<section class="infos">
    <a href="{{ path('me_likey_web_app_track_show', {'id': track.id}) }}">
        <div class="artist">{{ track.artist }}</div>
        <div class="title">{{ track.title }}</div>
    </a>
    <ul class="extra-infos">
        {% if track.musiclabel %}
            <li>Label : <a target="_blank" href="{{ track.musiclabel }}">{{ track.musiclabel }}</a></li>
        {% endif %}
        {% if track.website %}
            <li>Website : <a target="_blank" href="{{ track.website}}">{{ track.website }}</a></li>
        {% endif %}
        <li class="source">Source :
        {% if track.soundcloud %}
            <a class="soundcloud" href="{{ track.soundcloud }}" target="_blank">Soundcloud</a>
        {% elseif track.youtube %}
            <a class="youtube" href="http://youtube.com/watch?v={{ track.youtube }}" target="_blank">Youtube</a>
        {% elseif track.vimeo %}
            <a class="vimeo" href="http://vimeo.com/{{ track.vimeo }}" target="_blank">Vimeo</a>
        {% endif %}
        </li>
    </ul>
    <ul class="actions">
        <li><a class="addLikey">Me Likey</a></li>
        <li><a class="fb-share">Share</a></li>
        <li><a class="tw-share">Tweet</a></li>
        <li><a target="_blank" href="{{ path('me_likey_web_app_track_show', {id: track.id}) }}" class="permalink">Link</a></li>
    </ul>
</section>
